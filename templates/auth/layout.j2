<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventorify | Inventory Management App</title>
  <script defer src="https://unpkg.com/alpinejs@3.10.2/dist/cdn.min.js"></script>
  <link rel="stylesheet" href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" />
  <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>

  <main class="min-h-screen w-full bg-gray-100 text-gray-700" x-data="layout">
    <!-- header -->
    <header class="flex w-full items-center justify-between border-b-2 border-gray-200 bg-white p-2">
      <!-- logo -->
      <div class="flex items-center space-x-2">
        <button type="button" class="text-3xl" @click="asideOpen = !asideOpen"><i class="bx bx-menu"></i></button>
        <div class="text-xl">Inventorify</div>
      </div>
      <div
        class="h-9 w-9 overflow-hidden rounded-full">
        <img src="https://plchldr.co/i/40x40?bg=111111" alt="plchldr.co" />
      </div>
    </header>

    <div class="flex">
      <!-- sidebar -->
      <aside class="flex w-72 flex-col space-y-2 border-r-2 border-gray-200 bg-white p-2" style="height: 90.5vh" x-show="asideOpen">
        <a href="/dashboard" class="flex items-center space-x-1 rounded-md px-2 py-3 hover:bg-gray-100 hover:text-blue-600">
          <span class="text-2xl"><i class="bx bx-home"></i></span>
          <span>Dashboard</span>
        </a>

        <a href="/products" class="flex items-center space-x-1 rounded-md px-2 py-3 hover:bg-gray-100 hover:text-blue-600">
          <span class="text-2xl"><i class="bx bx-basket"></i></span>
          <span>Products</span>
        </a>

        <a href="/categories" class="flex items-center space-x-1 rounded-md px-2 py-3 hover:bg-gray-100 hover:text-blue-600">
          <span class="text-2xl"><i class="bx bx-category"></i></span>
          <span>Categories</span>
        </a>
        <form method="post" action="/logout" class="flex items-center space-x-1 rounded-md px-2 py-3 text-red-500 hover:text-red-300">
          <button type="submit" class="flex items-center">
            <span class="text-2xl"><i class='bx bx-log-out-circle'></i></span>
            <span class="ml-1">Logout</span>
          </button>
        </form>
      </aside>

      <!-- main content -->
      <div class="w-full p-4">

        {% block main%}{% endblock %}
      </div>
    </div>
  </main>

  <script>
    document.addEventListener("alpine:init", () => {
      Alpine.data("layout", () => ({
        asideOpen: true,
      }));
    });
  </script>

</body>

</html>
